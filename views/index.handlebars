<div class="container">
  <div class="jumbotron">
    <div class="row">
      <div class="col">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block w-100" src="images/skydiving-pic-1.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="images/skydiving-pic-2.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="images/skydiving-pic-3.jpg" alt="Third slide">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col">
        <h2>Drop Zones</h2>
      </div>
    </div>
    <div class="row">
      {{#each DZs}}
      <div class="col-lg-4 col-md-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">{{name}}</h5>
            <p>{{address}}, {{city}}, {{state}}</p>
            <p>{{telephone}}</p>
            <a href="#" class="card-link">{{website}}</a>
            {{#each boogies}} {{name}} {{/each}}
          </div>
        </div>
      </div>
      {{/each}}
    </div>
    <div class="row">
      <div class="col">
        <h2>Boogies</h2>
      </div>
    </div>
    <div class="row">
      {{#each boogies}}
      <div class="col-lg-4 col-md-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">{{name}}</h5>
            <p>Drop Zone: {{DZ}}</p>
            <p>Start:</p>
            <p>{{beginDate}}</p>
            <p>End:</p>
            <p>{{endDate}}</p>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>

<!-- Sign up Modal -->
<div id="sign-up-modal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    <h2>Create an account:</h2>
    <div class="row">
      <div class="col">
        <form>
          <div class="form-group">
            <label for="usernameInput">Create your username:</label>
            <input type="username" class="form-control" id="usernameInput" placeholder="Enter your username here">
          </div>
          <div class="form-group">
            <label for="passwordInput">Choose your password:</label>
            <input type="password" class="form-control" id="passwordInput" placeholder="Type your password here">
          </div>
          <div class="form-group">
            <label for="passwordInputCheck">Type your password again:</label>
            <input type="password" class="form-control" id="passwordInputCheck" placeholder="Type your password here again">
          </div>
          <div class="form-group">
            <label for="nameInput">Enter your Name:</label>
            <input type="name" class="form-control" id="nameInput" placeholder="Enter your name here">
          </div>
          <div class="form-group">
            <label for="licenseInput">What skydiving license do you have?</label>
            <input type="license" class="form-control" id="licenseInput" placeholder="Enter your license here">
          </div>
          <div class="form-group">
            <label for="jumpsInput">How many jumps have you done?</label>
            <input type="number" class="form-control" id="jumpsInput" placeholder="Enter your number of jumps here">
          </div>
          <div class="form-group">
            <label for="dropzoneInput">What is your home drop zone?</label>
            <input type="location" class="form-control" id="dropzoneInput" placeholder="Enter your home drop zone here">
          </div>
          <div class="form-group">
            <label for="bioInput">Enter your bio</label>
            <input type="text" class="form-control" id="bioInput" placeholder="Enter your bio here">
          </div>
          <button id="create-account-submit" type="submit" class="btn btn-primary">Create my account</button>
        </form>
      </div>
    </div>
  </div>
</div>

