<div class="container">
    <div class="jumbotron">
        <div class="row">
            <div class="col">
                <h2 id="profile-name"> {{name}}</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-sm">
                <img src="../images/{{img}}" class="img-fluid" alt="Profile Picture">
            </div>
            <div class="col-sm">
                <p>License: {{license}}</p>
                <p>Jumps: {{numberOfJump}}</p>
                <p>Home DZ: {{homeDropZone}}</p>
                <p>Bio: {{bio}}</p>
            </div>
        </div>
